<%- include('partials/header')%>

<body>
    
    <div class="container mt-5">
        <a href="/"><button type="button" class="btn btn-primary">Home</button></a>
    </div>
    <div class="container mt-5">
        <h1 class="text-center">Customer Information</h1>
            <div class="container mt-5 text-right">
                <a href="/customers/add"><button type="button" class="btn btn-success">Apply first</button></a>
            </div>
        
        <table class="table">
            <thead>
            <tr>
                
                <th scope="col">ID</th>
                <th scope="col">Notes</th>
                <th scope="col">Action</th>
               
            </tr>
            </thead>
            <tbody>
                <% data.forEach(list => { %>
                <tr>
                    <td><%= list.id %></td>
            <td><%= list.capss() %></td>
                    <td>
                        <a href="/customers/delete/<%=list.id%>"onclick="return confirm('Are you sure?')">
                            <button type="button" class="btn btn-danger">Finish Order</button>
                        </a>
                        <a href="/customers/order/<%= list.id %>"><button type="button" class="btn btn-success">Check Requested Menu</button>
                        </a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>